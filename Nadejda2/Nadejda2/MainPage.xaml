<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nadejda2.MainPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>
        <Frame BackgroundColor="#E1D56D" Padding="24" CornerRadius="0" Grid.Row="0">
            <Label Text="Welcome to Nadejda 2.0!" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="White" FontSize="50" FontFamily="cursive"/>
        </Frame>
        <Label Text="Данная программа позволит вам решать задачи по 'Теории чисел'." Padding="30,30,30,0" FontSize="Body" VerticalTextAlignment="Start" HorizontalTextAlignment="Center" Grid.Row="1"/>
        <Image Source="main_img" Grid.Row="2" Scale="0.9" VerticalOptions="Start" />
        <Button Grid.Row="3" Text="Продолжить" Clicked="Button_Clicked_Main_Continue" FontFamily="Custom" FontAttributes="Italic, Bold" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center" Padding="20" BackgroundColor="#6D76F0" CornerRadius="30"/>
       
    </Grid>
        

</ContentPage>
